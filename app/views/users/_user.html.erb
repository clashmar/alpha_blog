<h1><%= @user.username %></h1>
</br>
<div class="row">
  <div class="col-md-4">
    <%= gravatar_for @user, size: 80 %>
  </div>
</div>
</br>

<div class="tab-menu">
    <div class="tab-menu-item">
      <div class="<%= 'active-tab' if @tab == 'overview' %>">
        <%= link_to "Overview", user_path(@user) %>
      </div>
    </div>
    <div class="tab-menu-item">
      <div class="<%= 'active-tab' if @tab == 'articles' %>">
        <%= link_to "Articles", tab_path(@user) %>
      </div>
    </div>
</div>
</br>